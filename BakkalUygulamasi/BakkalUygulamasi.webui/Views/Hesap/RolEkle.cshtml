@model BakkalUygulamasi.entity.Data.Rol
<h1 class="h3 mt-4">Rol Ekleme</h1>
<hr />
<div class="w-100">
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Hesap" asp-action="RolEkle" method="POST">
                <div class="form-group row">
                    <label asp-for="@Model.RAdi" class="col-sm col-form-label"><b>Rol Adı</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="@Model.RAdi" />
                      
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

