@model BakkalUygulamasi.entity.Data.SatisMaddeleri
<h1 class="h3 mt-4">Ürün Satış Maddelerini Güncelle</h1>
<hr />
<div class="w-100">
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Personel" asp-action="SatisMaddeleriGuncelle" method="POST">
                <input type="hidden" name="smId" value="@Model.SmId" />
                <div class="form-group row">
                    <label asp-for="@Model.SiMiktar" class=" col-sm-2 col-form-label"><b>Satış Miktarı</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="@Model.SiMiktar" />

                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.SiFiyat" class="col-sm-2 col-form-label "><b>Satış Fiyatı</b></label>
                    <div class="col-sm-10 ">
                        <input class="form-control" asp-for="@Model.SiFiyat" />

                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.SiIskonto" class="col-sm-2 col-form-label"><b>Satış İskonto</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="@Model.SiIskonto" />

                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.SatisId" class=" col-sm-2 col-form-label"><b>Satış Id</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="@Model.SatisId" />

                    </div>
                </div>
                <div>
                    <label for="Marka">Ürün Seç</label>
                    @for (int i = 0; i < ViewBag.Uruns.Count; i++)
                    {
                        <input type="hidden" name="Uruns[@i].UrunId" value="@ViewBag.Uruns[@i].UrunId" />
                        <input type="hidden" name="Uruns[@i].UAdi" value="@ViewBag.Uruns[@i].UAdi" />}

                    <select asp-for="@Model.UrunId" class="col-sm-6 ml-5 mb-2 col-form-label">

                        @if (ViewBag.Uruns.Count > 0)
                        {
                            @foreach (var item in ViewBag.Uruns)
                            {
                                <option value="@item.UrunId">@item.UAdi</option>
                            }}
                    </select>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}
